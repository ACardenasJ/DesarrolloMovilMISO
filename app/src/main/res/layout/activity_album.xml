<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearArtista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nuevo Album"
            android:textSize="20dp"
            android:textStyle="italic"
            app:cardBackgroundColor="#A39F9F" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/lblNombreAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nombre del album"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EDNombreAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Introduce aquí el nombre del álbum"
            android:inputType="text" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/lblYearAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Año de lanzamiento del álbum"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EDYearAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Introduce aquí el año de lanzamiento del álbum"
            android:inputType="number" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/artista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Artista"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EDArtista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Introduce aquí el nombre del artista"
            android:inputType="text" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/lblCancionPreferida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Canción Preferida del Álbum"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EDCancionPreferida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Introduce aquí el nombre de la canción"
            android:inputType="text" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/lblGenero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Genero"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EDGenero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Introduce aquí el genero del álbum"
            android:inputType="text|textMultiLine" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/lblDescrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Descripción"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/EDDescrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Introduce aquí la Descripción"
            android:inputType="text|textMultiLine" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/BtnCrearAlbum"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:text="Crear"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>
</ScrollView>